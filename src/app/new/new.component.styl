@import "~styles"

input
  box-sizing border-box
  padding 1rem
  width 100%
  border-radius 3px
  border 1px transparent
  background-color darken($black-coral, 20%)

  &:focus
    outline-color $magic-mint

i
  float right
  position relative
  top 39px
  margin-right 1rem
  z-index 100

i.focus
  color $magic-mint